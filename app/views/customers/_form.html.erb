<%= form_for(@customer, html: {class: 'form-horizontal'}) do |form| %>
  <% if customer.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>

      <ul>
      <% customer.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.label :first_name, class: 'col-sm-2 control-label' %>

    <div class="col-sm-10">
      <%= form.text_field :first_name, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :last_name, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :last_name, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :address, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :address, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :city, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :city, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :zip, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :zip, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :cell_number, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :cell_number, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :office_number, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_field :office_number, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :description, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.text_area :description, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <font color=blue> e..g. <font color=red>requires "http://" or "https://"</font></font>
    <%= form.label :customer_url, class: 'col-sm-2 control-label' %>
    <div class="col-sm-5">
      <%= form.text_field :customer_url, class: 'form-control' %>
    </div>
  </div>

  <div class="field form-group">
    <%= form.label :boardcertified, class: 'col-sm-2 control-label' %>
    <div class="col-sm-10">
      <%= form.check_box :boardcertified, {:class => "myclass", :style => "mystyle"}, "yes", "no" %>
      <font color=blue>requester : </font><font color=red><%= current_user.email %></font>
    </div>
  </div>


  <div class="field form-group">
   <%= form.label 'Sales Person',class: 'col-sm-2 control-label' %>
   <%= form.collection_select :sale_id, Sale.order(:full_name),:id,:full_name, include_blank: true, class: 'form-control' %>
  </div>

  <div class="field form-group">
   <%= form.label 'Role', class: 'col-sm-2 control-label' %>
   <%= form.collection_select :status_id, Role.order(:type_description),:id,:type_description, include_blank: true, class: 'form-control'%>
 </div>

  <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
     <%= form.submit  data: { confirm: 'Are you sure?' } %>
    </div>
  </div>
<% end %>
