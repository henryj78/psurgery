<p id="notice"><%= notice %></p>

<h1>Customer Salesperson</h1>

<ul class="nav nav-pills" role="tablist">
  <li class="active"><%= link_to 'View Customer', customers_path %></li>
</ul>

<table class="table">
  <thead>
    <tr>
      <td><font color= blue><%= @customers_name %></font></td>
    <tr>
      <tr><td> &nbsp</td></tr>
    <tr style="height:auto !important; font-size:12px; line-height:17px;" >
      <th style="margin:2px; width:auto;" cellspacing="2">Name</th>
      <th style="margin:2px; width:auto;" cellspacing="2">State</th>
      <th style="margin:2px; width:auto;" cellspacing="2">Phone Number</th>
      <th style="margin:2px; width:auto;" cellspacing="2">Date Started</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name + " " + customer.last_name %></td>
        <td><%= customer.state %></td>
        <td><%= customer.cell_number %></td>
        <td><%= customer.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br />
