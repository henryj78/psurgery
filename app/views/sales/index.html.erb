<p id="notice"><%= notice %></p>

<h1>Sales</h1>

 <ul class="nav nav-pills" role="tablist">
    <li class="active"><%= link_to 'Salesperson', '' %></li>
  <li><%= link_to 'Tracking', tracks_path %></li>
  <li><%= link_to 'View Customer', customers_path %></li>
 </ul>

<table class="table">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Territory</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr style="font:Arial; font-size:10px" class="<%= cycle("even", "odd") %>" >
        <td><%= sale.first_name %></td>
        <td><%= sale.last_name %></td>
        <td><%= sale.territory %></td>
        <td><%= link_to 'Payments',sale_payments_path(sale)%></td>
        <td><%= link_to 'Customers', sale_customer_sales_path(sale.id) %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Delete', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

