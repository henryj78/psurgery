<p id="notice"><%= notice %></p>

<h1>Tracking</h1>

<ul class="nav nav-pills" role="tablist">
  <li class="active"><%= link_to 'Tracking', '' %></li>
  <li><%= link_to 'View Customer', customers_path %></li>
  <li><%= link_to 'Salesperson', sales_path %></li>
</ul>

<br />

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>User Name</th>
      <th>Customer Name</th>
      <th>Screen</th>
      <th>Command</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr style="font:Arial; font-size:10px" class="<%= cycle("even", "odd") %>" >
        <td><%= track.user_id %></td>
        <td><%= track.name %></td>
        <td><%= track.customer_name %></td>
        <td><%= track.screen %></td>
        <td><%= track.command %></td>
        <td><%= track.created_at %></td>
      </tr>
    <% end %>
  </tbody>
</table>
